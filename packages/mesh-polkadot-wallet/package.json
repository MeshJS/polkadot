{
  "name": "@meshsdk/mesh-polkadot-wallet",
  "version": "0.0.1",
  "description": "Mesh Polkadot wallet",
  "main": "./dist/index.cjs",
  "browser": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "setup-devnet": "npx @zombienet/cli setup polkadot polkadot-parachain",
    "devnet": "PATH=$PATH:$(pwd) npx @zombienet/cli -p native spawn test/devnet.toml"
  },
  "dependencies": {
    "@polkadot/api": "^15.8.1",
    "@polkadot/keyring": "^13.4.3",
    "@polkadot/types": "^15.8.1",
    "@polkadot/util-crypto": "^13.4.3",
    "@zombienet/cli": "^1.3.128"
  },
  "devDependencies": {
    "@repo/configs": "*",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}
